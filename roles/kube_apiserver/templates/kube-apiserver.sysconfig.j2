KUBE_APISERVER_OPTIONS=--advertise-address={{ kube_apiserver_advertise_address }} \
  --allow-privileged=true \
  --apiserver-count=3 \
  --audit-log-maxage=30 \
  --audit-log-maxbackup=3 \
  --audit-log-maxsize=100 \
  --audit-log-path=/var/log/audit.log \
  --authorization-mode=Node,RBAC \
  --bind-address=0.0.0.0 \
  --client-ca-file=/etc/kubernetes/ca.pem \
  --enable-admission-plugins=NamespaceLifecycle,NodeRestriction,LimitRanger,ServiceAccount,DefaultStorageClass,ResourceQuota \
  --etcd-cafile=/etc/kubernetes/ca.pem \
  --etcd-certfile=/etc/kubernetes/host.crt \
  --etcd-keyfile=/etc/kubernetes/host.key \
  --etcd-servers={{ kube_apiserver_etcd_servers }} \
  --event-ttl=1h \
  --encryption-provider-config=/etc/kubernetes/encryption-config.yaml \
  --kubelet-certificate-authority=/etc/kubernetes/ca.pem \
  --kubelet-client-certificate=/etc/kubernetes/host.crt \
  --kubelet-client-key=/etc/kubernetes/host.key \
  --kubelet-https=true \
  --runtime-config=api/all=true \
  --service-account-key-file=/etc/kubernetes/service-account.crt \
  --service-cluster-ip-range={{ kube_apiserver_service_cluster_ip_range }} \
  --service-node-port-range=30000-32767 \
  --tls-cert-file=/etc/kubernetes/host.crt \
  --tls-private-key-file=/etc/kubernetes/host.key \
  --v=1
